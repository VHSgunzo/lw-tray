pkgname='lw-tray'
pkgver='0.0.3'
pkgrel='1'
pkgdesc='Lutris Wine tray'
arch=('x86_64')
url='https://github.com/VHSgunzo/lw-tray'
license=('MIT')
depends=('lwrap')
source=('lw-tray')
sha256sums=('SKIP')

package() {
    install -Dm755 "$pkgname" "$pkgdir/opt/lwrap/bin/$pkgname"
}
